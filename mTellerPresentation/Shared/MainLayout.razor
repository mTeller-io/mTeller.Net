@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Warning" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        mTeller
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu Class="mud-width-full">
            <MudText Typo="Typo.h6" Class="px-4">Menu</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">...</MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href="#" Icon="@Icons.Filled.Money">Cash-In Services</MudNavLink>
            <MudNavLink Href="#" Icon="@Icons.Filled.MoneyOff">Cash-Out Services</MudNavLink>
            <MudNavLink Href="#" Icon="@Icons.Filled.Work" Disabled="true">Organisation</MudNavLink>
            <MudNavGroup Title="Settings" Icon="@Icons.Filled.Settings" Expanded="true">
                <MudNavLink Href="#" Icon="@Icons.Filled.People" IconColor="Color.Success">Users</MudNavLink>
                <MudNavLink Href="#" Icon="@Icons.Filled.Security" IconColor="Color.Info">Security</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
